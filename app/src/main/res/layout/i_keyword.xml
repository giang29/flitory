<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:paddingStart="@dimen/padding_margin_normal"
    android:paddingTop="@dimen/padding_margin_small"
    android:paddingEnd="@dimen/padding_margin_normal"
    android:paddingBottom="@dimen/padding_margin_small"
    tools:ignore="UseCompoundDrawables"
    >

    <TextView
        android:id="@+id/keywordTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        tools:text="Animals"
        />

    <ImageView
        android:id="@+id/extendCollapseButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/padding_margin_small"
        android:paddingEnd="@dimen/padding_margin_small"
        android:background="?selectableItemBackgroundBorderless"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_down"
        />
</LinearLayout>
